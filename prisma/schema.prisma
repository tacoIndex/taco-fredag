generator client {
  provider = "prisma-client-js"
}

// Use Prisma Accelerate in runtime (PRISMA_DATABASE_URL) and direct connection for migrations (DATABASE_URL)
datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model EanResponeDtos {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  payload   Json
  processed Boolean  @default(false)
}

model Product {
  id       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ean       String  
  url       String
  name      String
  extraData String?
  store     String
  currentPrice Float
  @@unique([ean, store])
}
